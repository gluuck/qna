- if current_user.present?
  = form_with model: [@question, @answer],
    data: {controller: 'reset-form', action: 'turbo:submit-end->reset-form#reset'} do |f|
    = f.label :body
    = f.text_area :body
    = f.label :files
    = f.file_field :files, multiple: true, direct_upload: true
    = f.submit 'Add Answer'
